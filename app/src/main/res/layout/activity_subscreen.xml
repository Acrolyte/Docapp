<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".subscreen">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/dp"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60dp"
                    android:src="@drawable/logo_dp"
                    app:shapeAppearanceOverlay="@style/Circular" />

                <LinearLayout
                    android:id="@+id/name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Cardiologist"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Dr. Alan C Braverman"
                        android:textColor="@color/black"
                        android:textSize="24dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tiles"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_below="@+id/name_text"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">


                    <android.widget.Button
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/custom_category"
                        android:drawableTop="@drawable/ic_textsms"
                        android:drawableTint="@color/blue1"
                        android:gravity="center"
                        android:paddingTop="16dp" />

                    <android.widget.Button
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/custom_category"
                        android:backgroundTint="@color/y0"
                        android:drawableTop="@drawable/ic_call"
                        android:drawableTint="@color/y1"
                        android:gravity="center"
                        android:paddingTop="16dp" />

                    <android.widget.Button
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/custom_category"
                        android:backgroundTint="#f4f5f9"
                        android:drawableTop="@drawable/ic_videocall"
                        android:drawableTint="#d5d6da"
                        android:gravity="center"
                        android:paddingTop="16dp" />

                    <android.widget.Button
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/custom_category"
                        android:backgroundTint="#f2f1ff"
                        android:drawableTop="@drawable/ic_location"
                        android:drawableTint="#ec86ab"
                        android:gravity="center"
                        android:paddingTop="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tiles"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="About"
                        android:textColor="@color/black"
                        android:textSize="24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Dr. Alan C Braverman is a cardiologist in Saint Louis, Missouri and is affliated with multiple hospitals in the area."
                        android:textSize="16dp" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/cal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/about"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Schedules"
                        android:textColor="@color/black"
                        android:textSize="24dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/less"
                            android:textSize="24dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text=" January "
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/great"
                            android:textSize="24dp" />
                    </LinearLayout>


                </RelativeLayout>

                <HorizontalScrollView
                    android:id="@+id/week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/cal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="65dp"
                            android:layout_height="90dp"
                            android:padding="8dp"
                            android:clickable="true"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/custom_cat2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Su"
                                android:fontFamily="@font/roboto_bold"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/black"
                                android:textSize="24sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentBottom="true"
                                android:fontFamily="@font/roboto_medium"
                                android:textSize="24sp"
                                android:text="10"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="65dp"
                            android:layout_height="90dp"
                            android:padding="8dp"
                            android:clickable="true"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/custom_cat2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mo"
                                android:fontFamily="@font/roboto_bold"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/black"
                                android:textSize="24sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentBottom="true"
                                android:fontFamily="@font/roboto_medium"
                                android:textSize="24sp"
                                android:text="11"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="65dp"
                            android:layout_height="90dp"
                            android:padding="8dp"
                            android:clickable="true"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/custom_cat2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tu"
                                android:fontFamily="@font/roboto_bold"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/black"
                                android:textSize="24sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentBottom="true"
                                android:fontFamily="@font/roboto_medium"
                                android:textSize="24sp"
                                android:text="12"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="65dp"
                            android:layout_height="90dp"
                            android:padding="8dp"
                            android:clickable="true"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/custom_cat2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="We"
                                android:fontFamily="@font/roboto_bold"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/black"
                                android:textSize="24sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentBottom="true"
                                android:fontFamily="@font/roboto_medium"
                                android:textSize="24sp"
                                android:text="13"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="65dp"
                            android:layout_height="90dp"
                            android:padding="8dp"
                            android:clickable="true"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/custom_cat2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Th"
                                android:fontFamily="@font/roboto_bold"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/black"
                                android:textSize="24sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentBottom="true"
                                android:fontFamily="@font/roboto_medium"
                                android:textSize="24sp"
                                android:text="14"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="65dp"
                            android:layout_height="90dp"
                            android:padding="8dp"
                            android:clickable="true"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/custom_cat2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fr"
                                android:fontFamily="@font/roboto_bold"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/black"
                                android:textSize="24sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentBottom="true"
                                android:fontFamily="@font/roboto_medium"
                                android:textSize="24sp"
                                android:text="15"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="65dp"
                            android:layout_height="90dp"
                            android:padding="8dp"
                            android:clickable="true"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/custom_cat2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sa"
                                android:fontFamily="@font/roboto_bold"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/black"
                                android:textSize="24sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentBottom="true"
                                android:fontFamily="@font/roboto_medium"
                                android:textSize="24sp"
                                android:text="16"/>
                        </RelativeLayout>


                    </LinearLayout>
                </HorizontalScrollView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_below="@+id/week"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal">

                    <android.widget.Button
                        android:layout_height="80dp"
                        android:layout_width="90dp"
                        android:layout_centerVertical="true"
                        android:padding="20dp"
                        android:drawableTop="@drawable/ic_time"
                        android:background="@drawable/custom_category"/>

                    <android.widget.Button
                        android:layout_width="250dp"
                        android:layout_height="80dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:text="Appointment"
                        android:textAllCaps="false"
                        android:textSize="26dp"
                        android:textColor="@color/white"
                        android:background="@drawable/custom_category"/>
                </RelativeLayout>

            </RelativeLayout>
        </ScrollView>

</RelativeLayout>