<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainscreen">

    <RelativeLayout
        android:id="@+id/laytop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/roboto_bold"
            android:text="Doctor\nAppointment"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:shapeAppearanceOverlay="@style/Circular"
            app:srcCompat="@drawable/logo_dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/search_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/laytop"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/custom_search"
            android:hint="Search, e.g. Dr. Louis Pasteur"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="14dp" />

        <android.widget.Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:background="@drawable/search_button"
            android:drawableTint="@color/white"
            android:drawableTop="@drawable/ic_search"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/title_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_bar"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Categories"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <HorizontalScrollView
        android:id="@+id/categ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_category"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.widget.Button
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/custom_category"
                android:drawableTop="@drawable/ic_heart"
                android:drawableTint="@color/black"
                android:gravity="center"
                android:text="Heart"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <android.widget.Button
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/custom_category"
                android:drawableTop="@drawable/ic_brain"
                android:drawableTint="@color/black"
                android:gravity="center"
                android:text="Brain"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <android.widget.Button
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/custom_category"
                android:drawableTop="@drawable/ic_kidney"
                android:drawableTint="@color/black"
                android:gravity="center"
                android:text="Kidney"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <android.widget.Button
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/custom_category"
                android:drawableTop="@drawable/ic_dna"
                android:drawableTint="@color/black"
                android:gravity="center"
                android:text="DNA"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <android.widget.Button
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/custom_category"
                android:drawableTop="@drawable/ic_eye"
                android:drawableTint="@color/black"
                android:gravity="center"
                android:text="Eye"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <android.widget.Button
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/custom_category"
                android:drawableTop="@drawable/ic_stomach"
                android:drawableTint="@color/black"
                android:gravity="center"
                android:text="Stomach"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp" />


        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/title_doc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/categ"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Top Doctors"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_doc"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/pro1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginVertical="10dp"
                android:clickable="true"
                android:background="@drawable/custom_category"
                android:orientation="horizontal"
                android:padding="10dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/mask"
                    app:shapeAppearanceOverlay="@style/Circular" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="120dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Cardiologist"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Dr. Alan C Braverman"
                        android:textSize="20dp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/custom_category"
                android:orientation="horizontal"
                android:padding="10dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/mask"
                    app:shapeAppearanceOverlay="@style/Circular" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="120dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Orthodontist"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Dr. Michael Aaron"
                        android:textSize="20dp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/custom_category"
                android:orientation="horizontal"
                android:padding="10dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/mask"
                    app:shapeAppearanceOverlay="@style/Circular" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="120dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Eye Specialist"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Dr. Shelley Rahman"
                        android:textSize="20dp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/custom_category"
                android:orientation="horizontal"
                android:padding="10dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/mask"
                    app:shapeAppearanceOverlay="@style/Circular" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="120dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Nephrologist"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Dr. Bruce Wayne"
                        android:textSize="20dp" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>